<%= form_for(@atweet, url: choose_new_or_edit) do |f| %>
  <% if @atweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= @atweet.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @atweet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit %>
<% end %>

<%= link_to "つぃーと一覧画面にもどる", atweets_path %>